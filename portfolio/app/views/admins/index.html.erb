<div class="jumbotron text-center">
  <h1>Welcome Admin!</h1>
</div>
<div class="col-lg-12">
  <div class="row">
    <div class="col-lg-12 text-right" id="login">
      <button type="button" class="btn btn-link"><a href="/start">Retun to Portfolio</a></button>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-4">
      <form action="/admin/login" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group row">
          <label for="example-email-input" class="col-xs-3 col-lg-2 col-form-label">Email:</label>
          <div class="col-xs-5">
            <input class="form-control" name="email" type="email" placeholder="Email" id="example-email-input">
          </div>
        </div>
        <div class="form-group row">
          <label for="example-password-input" class="col-xs-3 col-lg-2 col-form-label">Password:</label>
          <div class="col-xs-5">
            <input class="form-control" name="password" type="password" placeholder="Password" id="example-password-input">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-xs-8 col-lg-7 text-right">
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
          </div>
        </div>
        <% if flash[:errors]%>
          <p class="errors"><%= flash[:errors] %><p>
        <% end %>
      </form>
    </div>
  </div>
</div>